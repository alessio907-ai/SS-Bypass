# Speicher von Java-Prozessen direkt scannen
function Quick-Memory-Cheat-Scan {
    Clear-Host
    Write-Host "üöÄ QUICK CHEAT SCAN" -ForegroundColor Red
    
    # Finde alle Java-Prozesse
    $javaProcs = Get-Process | Where-Object { $_.ProcessName -match "java|javaw" }
    
    foreach ($proc in $javaProcs) {
        Write-Host "`nüîç Scanne: $($proc.ProcessName) (PID: $($proc.Id))" -ForegroundColor Cyan
        
        # 1. MODULE CHECK (DLLs)
        $suspiciousModules = $proc.Modules | Where-Object {
            $_.ModuleName -match "inject|hook|cheat|client|hack|meteor|wurst|aristois|future"
        }
        
        if ($suspiciousModules.Count -gt 0) {
            Write-Host "‚ùå VERD√ÑCHTIGE DLLs GEFUNDEN:" -ForegroundColor Red
            foreach ($mod in $suspiciousModules) {
                Write-Host "   - $($mod.ModuleName)" -ForegroundColor Yellow
                Write-Host "     Pfad: $($mod.FileName)" -ForegroundColor Gray
            }
        }
        
        # 2. COMMAND LINE CHECK
        try {
            $cmd = (Get-CimInstance Win32_Process -Filter "ProcessId=$($proc.Id)").CommandLine
            if ($cmd -match "-javaagent:|inject|cheat|hack") {
                Write-Host "‚ùå CHEAT ARGUMENTE GEFUNDEN:" -ForegroundColor Red
                Write-Host "   $cmd" -ForegroundColor Yellow
            }
        } catch { }
        
        # 3. NETWORK CHECK
        $connections = netstat -ano | Select-String ":$($proc.Id)\s"
        if ($connections -match "127\.0\.0\.1|localhost") {
            Write-Host "‚ö† LOKALE CHEAT-VERBINDUNG" -ForegroundColor Yellow
        }
    }
}
